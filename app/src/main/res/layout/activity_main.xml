<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Количество часов:"
    android:textSize="18sp"/>

<EditText
    android:id="@+id/hoursInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:hint="Введите количество часов"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Тип транспорта:"
    android:textSize="18sp"
    android:layout_marginTop="16dp"/>

<RadioGroup
    android:id="@+id/vehicleTypeGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/carRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автомашина (2000 руб./час)"/>

    <RadioButton
        android:id="@+id/minivanRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Минивэн (2500 руб./час)"/>

    <RadioButton
        android:id="@+id/busRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автобус (3500 руб./час)"/>
</RadioGroup>

<Button
    android:id="@+id/calculateButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OK"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="24dp"/>
</LinearLayout>

